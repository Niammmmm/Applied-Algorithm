// Last edited: 09/10/2018
#include<stdio.h>
#include<conio.h>
#define max 10000
int A[6] = { 1, 5, 10, 50, 100, 500 };
int m, n, p;
int cnt, T, min;
int x[max];
void solution(){
	int sum = 0;
	for (int i = 0; i < 7; i++){
		sum = sum + x[i];
	}
	if (sum < min) min = sum;
}

bool check(int v, int k){
	if (k == 5){
		if (T + A[k] * v != m) return false;
	}
	return true;
}

void TRY(int k){
	int v;
	for (v = 0; v <= 5; v++){
		if (check(v, k)){
			x[k] = v;
			T += A[k] * v;
			if (k == 5) solution();
			else TRY(k + 1);
			T -= A[k] * v;
		}
	}
}

int main(){
	min = 1000;
	freopen("input.txt", "r", stdin);
	scanf("%d", &n);
	m = 1000 - n;
	TRY(0);
	printf("%d", min);
	getch();

}
